<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/imageView24"
        android:layout_width="0dp"
        android:layout_height="@dimen/_60mdp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#fafafa"
        android:elevation="5dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Revelation"
        android:elevation="6dp"
        android:textColor="@color/gray_clr"
        android:textSize="@dimen/_10font_mdp"
        app:layout_constraintStart_toStartOf="@+id/chapterNo"
        app:layout_constraintTop_toBottomOf="@+id/chapterNo" />

    <TextView
        android:id="@+id/chapterNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"

        android:elevation="6dp"
        android:text="Chapter 1"
        android:textColor="#2f8079"
        android:textSize="@dimen/_14font_mdp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView24"
        app:layout_constraintStart_toEndOf="@+id/rowCounter"
        app:layout_constraintTop_toTopOf="@+id/imageView24"
        app:layout_constraintVertical_bias="0.32999998" />

    <TextView
        android:id="@+id/totalNoOfChapters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:elevation="6dp"

        android:text="1 to 7"
        android:textColor="@color/gray_clr"

        android:textSize="@dimen/_11font_mdp"
        app:layout_constraintBottom_toBottomOf="@+id/type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chapterNo" />

    <TextView
        android:id="@+id/rowCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"

        android:elevation="6dp"
        android:text="1."
        android:textColor="@color/gray_clr"
        android:textSize="@dimen/_10font_mdp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView24"
        app:layout_constraintStart_toStartOf="@+id/imageView24"
        app:layout_constraintTop_toTopOf="@+id/imageView24" />

</androidx.constraintlayout.widget.ConstraintLayout>