<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/HajjUmrrahBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110mdp"

        android:layout_gravity="center"

        android:layout_marginStart="8dp"

        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="2dp"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background_img3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_border_color="#333333"
        app:riv_corner_radius="5dp"

        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/view9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/black_transparent"
        app:layout_constraintBottom_toBottomOf="@+id/HajjUmrrahBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/HajjUmrrahBackground" />

    <TextView
        android:id="@+id/gridSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Introduction to"
        android:textColor="@color/white"
        android:textSize="@dimen/_9font_mdp"
        app:layout_constraintBottom_toBottomOf="@+id/HajjUmrrahBackground"
        app:layout_constraintEnd_toEndOf="@+id/HajjUmrrahBackground"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/HajjUmrrahBackground"
        app:layout_constraintTop_toTopOf="@+id/HajjUmrrahBackground"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/gridTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hajj_text"
        android:textColor="@color/white"
        android:textSize="@dimen/_12font_mdp"

        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/gridSubtitle"
        app:layout_constraintTop_toBottomOf="@+id/gridSubtitle" />

</androidx.constraintlayout.widget.ConstraintLayout>