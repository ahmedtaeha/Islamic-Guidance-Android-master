<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.districthut.islam.Fragments.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_surahFragment"
            app:destination="@id/surahFragment" />
        <action
            android:id="@+id/action_homeFragment_to_moreFragment"
            app:destination="@id/moreFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchQAFragment"
            app:destination="@id/searchQAFragment" />
        <action
            android:id="@+id/action_homeFragment_to_fundFragment"
            app:destination="@id/fundFragment" />
    </fragment>
    <fragment
        android:id="@+id/surahFragment"
        android:name="com.districthut.islam.Fragments.SurahFragment"
        android:label="SurahFragment" />
    <fragment
        android:id="@+id/moreFragment"
        android:name="com.districthut.islam.Fragments.MoreFragment"
        android:label="MoreFragment" />
    <fragment
        android:id="@+id/searchQAFragment"
        android:name="com.districthut.islam.Activities.search.SearchQAFragment"
        android:label="SearchQAFragment" />
    <fragment
        android:id="@+id/fundFragment"
        android:name="com.districthut.islam.Fragments.FundFragment"
        android:label="fragment_fund"
        tools:layout="@layout/fragment_fund" />
</navigation>